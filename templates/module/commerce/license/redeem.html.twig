{% extends 'base.html.twig' %}


{% block title %} - Redeem{% endblock %}

{% block body %}

<div class="login-wrapper content-container">
    <section class="content">

        {{ form_start(form, {'action': '', 'method': 'POST'}) }}

        {% if not auth %}
        <div class="w-100 alert alert-info">
            Already have an account? <br>
            Log in <a href="{{ url('app_login') }}">here</a>
        </div>
        {% endif %}


        {% if error != null %}
            <div class="w-100 alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

            <div class="form-group field-text">
                <label for="registrationCode" class="sr-only form-control-label required">Registration Code</label>
                <div class="form-widget form-widget-with-icon">
                    <i class="fa fa-key"></i>
                    {{ form_widget(form.code, { 'attr' : {'class': 'form-control', 'placeholder': 'License Key'}}) }}
                </div>
            </div>

            <div class="form-group field-button">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>

        {{ form_end(form) }}

    </section>
</div>

{% endblock %}