<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Archer{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div id="app">

            <nav class="navbar navbar-expand-lg navbar-light container">
                <div class="navbar-brand"><a href="{{ url("app_dashboard_client") }}" class="navbar-brand-bold">Archer</a> {% if name|default(null) is not null %} > {{ name }} {% endif %}</div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url("app_dashboard_client") }}">home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url("app_commerce_store") }}">store</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">irc</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#">support</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user-circle"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <h6 class="dropdown-header">{{ app.user.username }}</h6>
                                <div class="dropdown-divider"></div>
                                {# <a class="dropdown-item" href="#">Action</a> #}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="dropdown-item text-danger" href="{{ url("app_dashboard_admin") }}">Admin View</a>
                                {% endif %}
                                <a class="dropdown-item" href="{{ url('app_logout') }}">Log Out</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </nav>

            <div class="container p-md-3 page-content">

                {% block body %}{% endblock %}

            </div>

            <footer class="footer navbar-default" role="contentinfo">
                <div class="container">
                    <p class="fa-copyright">&copy; 2020 Archer Systems</p>
                </div>
            </footer>
            {% block javascripts %}
                <script src="{{ asset("build/runtime.js") }}"></script>
                <script src="{{ asset("build/vendors~app.js") }}"></script>
                <script src="{{ asset("build/app.js") }}"></script>
            {% endblock %}
            </div>
        </div>
    </body>
</html>
